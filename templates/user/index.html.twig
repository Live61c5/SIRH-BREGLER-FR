{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

{% set roleLabels = {
    'ROLE_ADMIN': 'Administrateur',
    'ROLE_DIRECTEURRH': 'Directeur RH',
    'ROLE_RESPONSABLE_HIERA': 'Responsable Hiérarchique',
    'ROLE_REFERENT_FRAIS': 'Référent Frais de Déplacement',
    'ROLE_RTT': 'Responsable RTT',
    'ROLE_USER': 'Utilisateur'
} %}

<div class="topbar">
        <h1 class="current"><b>SIRH - MNS</b> | <span>GESTION UTILISATEURS</span> </h1>
        <nav>
        <a href="#" class="menu-item"><span> Nombres d'utilisateurs : {{ userCount }}</span></a>
          <a href="{{ path('app_user_new') }}" class="menu-item"><span class="iconoir-plus-circle-solid mr-2"></span>Ajouter utilisateurs</a>
        </nav>
      </div>
      <div class="wrapper">
      
    <table class="table table-admin">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th >Roles</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.image }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>
                    {% if user.roles %}
                        {{ user.roles | map(role => roleLabels[role] ?? role) | join(', ') }}
                    {% else %}
                        Aucun rôle
                    {% endif %}
                </td>
                 <td class="d-flex justify-content-center align-items-center">
                   <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm "><span class="iconoir-design-pencil mr-2"></span> Edit</a>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="m-0">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger btn-sm d-flex"><span class="iconoir-trash-solid mr-2"></span> Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
